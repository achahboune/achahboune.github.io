<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 900 520">
  <defs>
    <linearGradient id="gPanel" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0" stop-color="#EAF3FF" stop-opacity="0.95"/>
      <stop offset="1" stop-color="#9CC6FF" stop-opacity="0.95"/>
    </linearGradient>
    <linearGradient id="gBody" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0" stop-color="#FFFFFF" stop-opacity="0.95"/>
      <stop offset="1" stop-color="#CFE2FF" stop-opacity="0.95"/>
    </linearGradient>
    <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="0" dy="18" stdDeviation="16" flood-color="#000000" flood-opacity="0.25"/>
    </filter>
    <filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur stdDeviation="6" result="b"/>
      <feColorMatrix in="b" type="matrix"
        values="0 0 0 0 0.10
                0 0 0 0 0.45
                0 0 0 0 1.00
                0 0 0 0.65 0" result="c"/>
      <feMerge>
        <feMergeNode in="c"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>

  <!-- satellite group -->
  <g filter="url(#shadow)" transform="translate(40,40) rotate(-8 410 220)">

    <!-- left panel -->
    <g>
      <rect x="40" y="170" width="220" height="110" rx="16" fill="url(#gPanel)" stroke="#D6E8FF" stroke-opacity="0.9" stroke-width="3"/>
      <g opacity="0.35">
        <path d="M70 190H240M70 214H240M70 238H240M70 262H240" stroke="#2C6BFF" stroke-width="3"/>
        <path d="M110 182V278M150 182V278M190 182V278" stroke="#2C6BFF" stroke-width="3"/>
      </g>
      <rect x="240" y="206" width="36" height="38" rx="10" fill="rgba(255,255,255,0.7)" stroke="#D6E8FF" stroke-width="2"/>
    </g>

    <!-- right panel -->
    <g>
      <rect x="540" y="170" width="220" height="110" rx="16" fill="url(#gPanel)" stroke="#D6E8FF" stroke-opacity="0.9" stroke-width="3"/>
      <g opacity="0.35">
        <path d="M570 190H740M570 214H740M570 238H740M570 262H740" stroke="#2C6BFF" stroke-width="3"/>
        <path d="M610 182V278M650 182V278M690 182V278" stroke="#2C6BFF" stroke-width="3"/>
      </g>
      <rect x="524" y="206" width="36" height="38" rx="10" fill="rgba(255,255,255,0.7)" stroke="#D6E8FF" stroke-width="2"/>
    </g>

    <!-- main body -->
    <g filter="url(#glow)">
      <rect x="320" y="150" width="220" height="150" rx="26" fill="url(#gBody)" stroke="#D6E8FF" stroke-opacity="0.95" stroke-width="3"/>
      <rect x="350" y="180" width="160" height="36" rx="14" fill="rgba(27,115,255,0.14)" stroke="rgba(27,115,255,0.25)" stroke-width="2"/>
      <circle cx="382" cy="256" r="10" fill="rgba(27,115,255,0.65)"/>
      <circle cx="425" cy="256" r="10" fill="rgba(27,115,255,0.35)"/>
      <circle cx="468" cy="256" r="10" fill="rgba(27,115,255,0.35)"/>
      <rect x="360" y="274" width="140" height="10" rx="5" fill="rgba(6,19,37,0.10)"/>
    </g>

    <!-- antenna -->
    <g>
      <path d="M430 150C430 95 465 70 520 58" fill="none" stroke="rgba(255,255,255,0.85)" stroke-width="6" stroke-linecap="round"/>
      <circle cx="520" cy="58" r="10" fill="rgba(255,255,255,0.95)"/>
      <path d="M520 58c40 20 70 50 90 85" fill="none" stroke="rgba(27,115,255,0.55)" stroke-width="5" stroke-linecap="round" opacity="0.75"/>
      <path d="M520 58c60 30 105 75 130 126" fill="none" stroke="rgba(27,115,255,0.35)" stroke-width="5" stroke-linecap="round" opacity="0.6"/>
    </g>

    <!-- connectors -->
    <path d="M276 225H320" stroke="rgba(255,255,255,0.75)" stroke-width="8" stroke-linecap="round"/>
    <path d="M540 225H564" stroke="rgba(255,255,255,0.75)" stroke-width="8" stroke-linecap="round"/>
  </g>
</svg>
